<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#ABABAB" />

    <!-- Rounded corners -->
    <corners android:radius="4dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding inside the drawable (optional) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

    <!-- Shadow-like effect for newer APIs (use elevation in views instead for real shadows) -->
</shape>