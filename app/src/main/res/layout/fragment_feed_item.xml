<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F1ECEC"
    android:layout_height="match_parent"
    tools:context=".ui.feed.FeedItemFragment">

   <TextView
       android:visibility="gone"
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Feed"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:layout_margin="@dimen/_4sdp"
       android:textSize="@dimen/_16sdp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/template_image_feed"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleType="centerCrop"
       android:src="@drawable/radial_gradient_flowers"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"

       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView"
       app:layout_constraintVertical_bias="0.0" />

   <LinearLayout
       android:id="@+id/replace_images"
       style="@style/LinearLayoutEditYellowStyle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="88dp"
       android:gravity="center"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.39"
       app:layout_constraintStart_toStartOf="parent">

      <ImageView
          android:layout_width="@dimen/_26sdp"
          android:layout_height="@dimen/_26sdp"
          android:paddingLeft="@dimen/_5sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_2sdp"
          android:src="@drawable/baseline_edit_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="@dimen/_5sdp"
          android:text="Replace Photos"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp"
          android:textStyle="bold" />

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>