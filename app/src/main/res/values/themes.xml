<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollageProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

<!--    <style name="Theme.CollageProject" parent="Base.Theme.CollageProject" />-->
    <style name="Theme.CollageProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar background -->
        <item name="android:statusBarColor">@color/blue_color_picker</item>
        <!-- Light/Dark icons -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Style for rounded corner dialog -->
    <style name="RoundedCornerDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyCustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Animation for dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">28dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>

    </style>
    <style name="styleSubHeading">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleSubHeadingNotBold">
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Change status bar color -->
        <item name="android:statusBarColor">@color/blue_color_picker</item>
    </style>
</resources>